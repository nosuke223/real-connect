transition(name='v-modal' appear v-if='modal.userWarn')
  article#user-detail.p-modal
    .p-modal__overlay.u-mode-bg--overlay(@click.self='closeModal("userWarn")')
      section.p-modal__inner.u-mode-bg--light.p-card.v-modal-content
        header.p-card__header.has-round-button
          h2 通報送信
          button.p-card__round-button.u-bg--primary.p-modal__close(@click='closeModal("userWarn")') ✕
        .p-card__body.u-text
          section
            h2 通報理由
            .input-field
              textarea.p-profile__situation-item.p-profile__textarea(name='warn_reason' placeholder='入力してください' v-model="warnReason")
        footer.p-card__footer.p-card__footer--fluid
          .u-fluid-button.u-bg--primary
            button.p-modal__close(@click='closeModal("userWarn")') キャンセル
            button(@click='sendUserWarn()') 送信する
