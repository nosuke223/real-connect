  - const pageTitle = 'Check-in Code'
  - const userType = 'admin'

block content

  // ↓ BEGIN Page Content
  
  .p-check-in-code
    .p-check-in-code__inner
      header.p-check-in-code__header
        h1.c-logo
          a.c-logo__body(href="/")
            i.glyph.glyph-brand-logo.c-logo__symbol
            span.c-logo__text.cft Real-Connect
          span.c-logo__tag-line Connecting People with People.
        p.p-check-in-code__message Welcome! Thank you for coming to here!

      .p-check-in-code__body
