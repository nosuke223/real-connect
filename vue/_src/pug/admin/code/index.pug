        span.p-check-in-code__number
          | ----

      //- .p-check-in-code__body
        span.p-check-in-code__title
          | Out of Event Time.
          br
          small イベント開催時間外です
        span.p-check-in-code__number
          | ----


  // ↑ END Page Content

  script
    .
      /**
       * URLのパラメータを取得
       */
      function getParam(name, url) {
        if (!url) url = window.location.href;
        name = name.replace(/[\[\]]/g, "\\$&");
        var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
            results = regex.exec(url);
        if (!results) return null;
        if (!results[2]) return '';
        return decodeURIComponent(results[2].replace(/\+/g, " "));
      }

      window.addEventListener('load', function() {
        $('.p-check-in-code__number').text(getParam('check_in_code'))
      });
