transition(name='v-modal' appear v-if='modal.eventAdd')
  article#event-add.p-modal
    .p-modal__overlay.u-mode-bg--overlay(@click.self='closeModal("eventAdd")')
      section.p-modal__inner.u-mode-bg--light.p-card.v-modal-content
        header.p-card__header.has-round-button
          h2 イベントの新規追加
          button.p-card__round-button.u-bg--primary.p-modal__close(@click='closeModal("eventAdd")') ✕
        .p-card__body.u-text.p-profile
          table.p-profile__table
            tbody
              tr
                th 開催日
                td
                  input(type='date' name='' value='')
              tr
                th コード
                td
                  input.p-profile__input(type='text' name='' autocomplete='off' placeholder='チェックインコードを入力してください' value='')
              tr
                th 開始日時
                td
                  input(type='date' name='' value='')
                  .c-opentime-field__select-group.fs
                    select.c-select-default(name=day+'OpenH')
                      option(value='' disabled) --
                      - for (openH = 0; openH < 24; openH++)
                        - openH = ( '00' + openH ).slice( -2 )
                        option(value=openH) #{openH}
                    select.c-select-default(name=day+'OpenM')
                      option(value='' disabled) --
                      - for (openM = 0; openM < 12; openM++)
                        - let openM_ = openM*5
                        - openM_ = ( '00' + openM_ ).slice( -2 )
                        option(value=openM_) #{openM_}
              tr
                th 終了日時
                td
                  input(type='date' name='' value='')
                  .c-opentime-field__select-group.fs
                    select.c-select-default(name=day+'OpenH')
                      option(value='' disabled) --
                      - for (openH = 0; openH < 24; openH++)
                        - openH = ( '00' + openH ).slice( -2 )
                        option(value=openH) #{openH}
                    select.c-select-default(name=day+'OpenM')
                      option(value='' disabled) --
                      - for (openM = 0; openM < 12; openM++)
                        - let openM_ = openM*5
                        - openM_ = ( '00' + openM_ ).slice( -2 )
                        option(value=openM_) #{openM_}
              tr
                th 備考
                td
                  textarea.p-profile__situation-item.p-profile__textarea(name='')
                    | 備考が入ります。

        footer.p-card__footer.p-card__footer--fluid
          .u-fluid-button.u-bg--primary
            button.p-modal__close(@click='closeModal("eventAdd")') 閉じる
            button 削除
            button 決定
